{
  "name": "archiverse-language-server",
  "version": "0.0.1",
  "private": true,
  "description": "Standalone Language Server process for Archiverse (Langium + Graph Persistence).",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "watch": "tsc --watch tsconfig.json",
    "start": "node --enable-source-maps lib/main.js",
    "clean": "rimraf lib tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "langium": "~3.1.0",
    "vscode-languageserver": "~9.0.1",
    "vscode-uri": "~3.0.8",
    "vscode-jsonrpc": "~8.2.0",
    "inversify": "~6.0.2",
    "reflect-metadata": "~0.2.2",
    "gremlin": "^3.7.2"
  },
  "devDependencies": {
    "langium-cli": "~3.1.0",
    "@types/node": "*",
    "@types/gremlin": "^3.6.5",
    "rimraf": "latest",
    "typescript": "latest"
  }
}
