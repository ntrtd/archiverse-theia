{
  "extends": "../../tsconfig.base.json", // Assuming base config at the root
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "module": "NodeNext", // Use NodeNext for modern ESM compatibility
    "moduleResolution": "NodeNext",
    "target": "ES2022", // Target modern Node.js version
    "lib": ["ES2022"],
    "sourceMap": true,
    "declaration": true,
    "composite": true, // Enable project references if used in monorepo
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true, // Needed for reflect-metadata
    "emitDecoratorMetadata": true // Needed for reflect-metadata
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
